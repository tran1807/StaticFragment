<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4284E6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewMain"
        android:textColor="#00FF04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/buttonMain"
        android:layout_below="@+id/textViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chang Text"/>

    <Button
        android:id="@+id/buttonTruyen"
        android:layout_below="@+id/textViewMain"
        android:layout_toRightOf="@+id/buttonMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Truyền"/>
    <Button
        android:id="@+id/buttonDialog"
        android:layout_below="@+id/textViewMain"
        android:layout_toRightOf="@+id/buttonTruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog"/>
<LinearLayout
    android:id="@+id/myLinearLayout"
    android:orientation="vertical"
    android:layout_below="@+id/buttonMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

